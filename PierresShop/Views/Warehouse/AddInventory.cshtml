@{
  Layout = "_Layout";
}
@model PierresShop.Models.Warehouse
<div class="container">
  <div class="col-md-12">
    <div class="row">
      <div class="card-header">
        <h1>Add a new item!</h1>
      </div>
      <h4>Add an intentory item to this warehouse:</h4>
      @using (Html.BeginForm())
      {
        @Html.HiddenFor(model => model.WarehouseId)
        @Html.Label("Select item")
        @Html.DropDownList("InventoryId")
        <input id="button" class="btn btn-success" type="submit" value="Save" />
      }
      <button id="button" type="button" class="btn btn-success">@Html.ActionLink("Back to warehouse list", "Index")</button>
    </div>
  </div>
</div>